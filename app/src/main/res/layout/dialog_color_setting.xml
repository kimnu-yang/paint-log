        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeon_sung"
        android:text="@string/diary_color_percent_40"
        android:textSize="@dimen/diary_title_small"
        android:textColor="@color/deep"
        app:layout_constraintTop_toTopOf="@id/percent_40"
        app:layout_constraintBottom_toBottomOf="@id/percent_40"
        app:layout_constraintStart_toStartOf="@id/percent_40"
        app:layout_constraintEnd_toEndOf="@id/percent_40"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeon_sung"
        android:text="@string/diary_color_percent_50"
        android:textSize="@dimen/diary_title_small"
        android:textColor="@color/deep"
        app:layout_constraintTop_toTopOf="@id/percent_50"
        app:layout_constraintBottom_toBottomOf="@id/percent_50"
        app:layout_constraintStart_toStartOf="@id/percent_50"
        app:layout_constraintEnd_toEndOf="@id/percent_50"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeon_sung"
        android:text="@string/diary_color_percent_60"
        android:textSize="@dimen/diary_title_small"
        android:textColor="@color/deep"
        app:layout_constraintTop_toTopOf="@id/percent_60"
        app:layout_constraintBottom_toBottomOf="@id/percent_60"
        app:layout_constraintStart_toStartOf="@id/percent_60"
        app:layout_constraintEnd_toEndOf="@id/percent_60"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeon_sung"
        android:text="@string/diary_color_percent_70"
        android:textSize="@dimen/diary_title_small"
        android:textColor="@color/deep"
        app:layout_constraintTop_toTopOf="@id/percent_70"
        app:layout_constraintBottom_toBottomOf="@id/percent_70"
        app:layout_constraintStart_toStartOf="@id/percent_70"
        app:layout_constraintEnd_toEndOf="@id/percent_70"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeon_sung"
        android:text="@string/diary_color_percent_80"
        android:textSize="@dimen/diary_title_small"
        android:textColor="@color/deep"
        app:layout_constraintTop_toTopOf="@id/percent_80"
        app:layout_constraintBottom_toBottomOf="@id/percent_80"
        app:layout_constraintStart_toStartOf="@id/percent_80"
        app:layout_constraintEnd_toEndOf="@id/percent_80"/>

