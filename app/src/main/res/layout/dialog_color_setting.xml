        app:layout_constraintTop_toBottomOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.5"/>

    <ImageButton
        android:id="@+id/percent_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_circle_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="40"
        app:layout_constraintTop_toBottomOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.75"/>

    <ImageButton
        android:id="@+id/percent_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_circle_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="50"
        app:layout_constraintTop_toBottomOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="1"/>

    <ImageButton
        android:id="@+id/percent_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_circle_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="60"
        app:layout_constraintTop_toBottomOf="@id/percent_10"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageButton
        android:id="@+id/percent_70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_circle_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="70"
        app:layout_constraintTop_toBottomOf="@id/percent_10"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
