        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeon_sung"
        android:text="@string/diary_color_percent_90"
        android:textSize="@dimen/diary_title_small"
        android:textColor="@color/deep"
        app:layout_constraintTop_toTopOf="@id/percent_90"
        app:layout_constraintBottom_toBottomOf="@id/percent_90"
        app:layout_constraintStart_toStartOf="@id/percent_90"
        app:layout_constraintEnd_toEndOf="@id/percent_90"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_yeon_sung"
        android:text="@string/diary_color_percent_100"
        android:textSize="@dimen/diary_title_small"
        android:textColor="@color/deep"
        app:layout_constraintTop_toTopOf="@id/percent_100"
        app:layout_constraintBottom_toBottomOf="@id/percent_100"
        app:layout_constraintStart_toStartOf="@id/percent_100"
        app:layout_constraintEnd_toEndOf="@id/percent_100"/>

