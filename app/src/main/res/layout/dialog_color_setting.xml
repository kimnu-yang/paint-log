<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/empty_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/empty_page"
        android:layout_marginTop="@dimen/diary_margin"
        android:layout_marginStart="@dimen/diary_margin"
        android:layout_marginEnd="@dimen/diary_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paint_red_selector"
        android:layout_marginTop="30dp"
        android:tooltipText="RED"
        app:layout_constraintTop_toTopOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.05"/>

    <ImageButton
        android:id="@+id/color_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paint_orange_selector"
        android:layout_marginTop="30dp"
        android:tooltipText="ORANGE"
        app:layout_constraintTop_toTopOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.35"/>

    <ImageButton
        android:id="@+id/color_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paint_yellow_selector"
        android:layout_marginTop="30dp"
        android:tooltipText="YELLOW"
        app:layout_constraintTop_toTopOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.65"/>

    <ImageButton
        android:id="@+id/color_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paint_green_selector"
        android:layout_marginTop="30dp"
        android:tooltipText="GREEN"
        app:layout_constraintTop_toTopOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.95"/>

    <ImageButton
        android:id="@+id/color_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paint_blue_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="BLUE"
        app:layout_constraintTop_toBottomOf="@id/color_red"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.2"/>

    <ImageButton
        android:id="@+id/color_navy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paint_navy_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="NAVY"
        app:layout_constraintTop_toBottomOf="@id/color_red"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.5"/>

    <ImageButton
        android:id="@+id/color_violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paint_violet_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="VIOLET"
        app:layout_constraintTop_toBottomOf="@id/color_red"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.8"/>

    <ImageButton
        android:id="@+id/percent_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_circle_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="10"
        app:layout_constraintTop_toBottomOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageButton
        android:id="@+id/percent_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_circle_selector"
        android:layout_marginTop="20dp"
        android:tooltipText="20"
        app:layout_constraintTop_toBottomOf="@id/empty_page"
        app:layout_constraintStart_toStartOf="@id/empty_page"
        app:layout_constraintEnd_toEndOf="@id/empty_page"
        app:layout_constraintHorizontal_bias="0.25"/>

    <ImageButton
        android:id="@+id/percent_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/light_circle_selector"
